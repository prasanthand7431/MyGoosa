<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:id="@+id/nestedScroll"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <View
        android:layout_below="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:id="@+id/startLine"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:scrollbars="horizontal"
        android:layout_below="@+id/startLine"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/tshirt"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/card_bg_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Categories"
                android:layout_below="@+id/profile_image"
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/tshirt"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/card_bg_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Men"
                    android:paddingLeft="25dp"
                    android:layout_below="@+id/profile_image1"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/tshirt"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/card_bg_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Women"
                    android:paddingLeft="18dp"
                    android:layout_below="@+id/profile_image2"
                    />
            </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/tshirt"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/card_bg_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_living"
                    android:singleLine="false"
                    android:paddingLeft="18dp"
                    android:layout_below="@+id/profile_image3"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/tshirt"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/card_bg_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/baby_clothing"
                    android:singleLine="false"
                    android:paddingLeft="18dp"
                    android:layout_below="@+id/profile_image4"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/tshirt"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/card_bg_color"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/baby_clothing"
                    android:singleLine="false"
                    android:paddingLeft="18dp"
                    android:layout_below="@+id/profile_image5"
                    />

            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_below="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:id="@+id/endLine"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <android.support.v7.widget.CardView
        android:layout_below="@+id/endLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/card_bg_color"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
           >

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>


</RelativeLayout>

</android.support.v4.widget.NestedScrollView>